# Database (Neon Postgres)
DATABASE_URL=             # Pooled connection string from Neon
DATABASE_URL_UNPOOLED=    # Direct connection string (used for migrations)

# Neon Auth
NEON_AUTH_URL=            # Neon Auth endpoint URL

# Google OAuth (optional in dev â€” Neon Auth provides shared dev credentials)
GOOGLE_CLIENT_ID=         # Google OAuth client ID
GOOGLE_CLIENT_SECRET=     # Google OAuth client secret

# Application
PUBLIC_APP_URL=http://localhost:3000  # Public-facing URL

# MCP (optional)
MCP_TOKEN_TTL_SECONDS=    # Access token TTL in seconds (default: 3600)

# CI/CD
SKIP_ENV_VALIDATION=      # Set to "true" in CI lint/typecheck jobs
